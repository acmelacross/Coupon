<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/view_fragement_title"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/center_bgg"
        >
        <View
            android:id="@+id/tFragmentCarTemp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/red"
            />


        <TextView
            android:id="@+id/tvFragmentCarInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_font"
            android:text="仓库还是空的,赶紧选选选"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tFragmentCarTemp"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/sbg_car2"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/tFragmentCarTemp"
            android:layout_alignBottom="@id/tvFragmentCarInfo"
            android:layout_marginBottom="30dp"
            />
    </RelativeLayout>


</LinearLayout>
