<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/view_fragement_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <ListView
        android:id="@+id/left_listview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:scrollbars="none"
        android:divider="@color/black_font"
        android:dividerHeight="1px"
        ></ListView>

    <com.fwh.main.fragment.two.PinnedHeaderListView
        android:id="@+id/pinnedListView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10"
        android:divider="@color/gray_font"
        android:dividerHeight="1px"
        android:layout_weight="5"
        android:background="@android:color/white"></com.fwh.main.fragment.two.PinnedHeaderListView>
    </LinearLayout>
</LinearLayout>


